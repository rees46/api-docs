#!/bin/bash

set -e

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

./configure.sh r46

bundle exec middleman build

rsync -av -e 'ssh -p 22' ./build/ refapi@94.228.126.211:reference.api.rees46.com/public/
rsync -av -e 'ssh -p 22' --delete ./build/ refapi@94.228.126.211:reference.api.rees46.com/public/
